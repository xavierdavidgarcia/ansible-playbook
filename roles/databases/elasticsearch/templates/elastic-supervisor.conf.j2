[program:{{inventory_hostname}}]
command= {{APP_FOLDER}}/elasticsearch/bin/elasticsearch  -D es.config={{CONF_FOLDER}}/elasticsearch/elasticsearch.yml
numprocs=1                    ; number of processes copies to start (def 1)
autostart=true                ; start at supervisord start (default: true)
autorestart=true              ; retstart at unexpected quit (default: true)
startsecs=60                  ; number of secs prog must stay running (def. 1)
startretries=3                ; max # of serial start failures (default 3)
user={{ELASTIC_USER}}                   ; setuid to this UNIX account to run the program
stderr_logfile = {{LOGS_FOLDER}}/elasticsearch/{{inventory_hostname}}-stderr.log
stdout_logfile = {{LOGS_FOLDER}}/elasticsearch/{{inventory_hostname}}-stdout.log

